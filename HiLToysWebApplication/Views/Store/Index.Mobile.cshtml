                        @Html.ActionLink("Rockets", "Browse", "Store", new { Category = "Rockets" }, htmlAttributes: new { @class = "blue-btn" })

                    </div>
                    <div id="cart-status" style="visibility: hidden">

                    </div>
                </div>
                <!-- end of main -->
                <div class="cl">&nbsp;</div>
            </div>
            <!-- end of container -->
        </div>
        <!-- end of shell -->
    </div>

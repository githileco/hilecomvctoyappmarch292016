<body>
    <!-- wrapper -->
    <div id="wrapper">
        <!-- shell -->
        <div class="shell">
            <!-- container -->
            <div class="container">
                <div class="main">
                    <div class="featured" style="height:auto">
                        <h4>Welcome to <strong>Tmwaga.</strong> Start Shopping in our Website Today completely for <strong>DISCOUNT!</strong></h4>
                        @Html.ActionLink("Cars", "Browse", "Store", new { Category = "Cars" }, htmlAttributes: new { @class = "blue-btn" })
